{
  "manifest_version": 3,
  "name": "Clipboard File Downloader",
  "version": "1.0",
  "permissions": [
    "clipboardRead",
    "downloads", 
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    }
  }
}
